  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Устанавливаем базовый URL если не задан",
          "if (!pm.collectionVariables.get('baseUrl')) {",
          "    pm.collectionVariables.set('baseUrl', 'http://localhost:8080');",
          "}",
          "",
          "// Логируем текущий токен",
          "const token = pm.collectionVariables.get('jwt_token');",
          "if (token) {",
          "    console.log('Using JWT token:', token.substring(0, 50) + '...');",
          "} else {",
          "    console.log('No JWT token set - some requests will fail');",
          "}"
        ]
      }
    }
  ]
}
